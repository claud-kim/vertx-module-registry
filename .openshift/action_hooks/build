#!/bin/bash

cd $OPENSHIFT_REPO_DIR

. ".openshift/vertx-module-registry.config"

. "${OPENSHIFT_DATA_DIR}/mailer.config"

cat ".openshift/config.json" | sed "s/<HOST>/${OPENSHIFT_DIY_IP}/;s/<PORT>/${OPENSHIFT_DIY_PORT}/;s/<MONGO_HOST>/${OPENSHIFT_MONGODB_DB_HOST}/;s/<MONGO_PORT>/${OPENSHIFT_MONGODB_DB_PORT}/;s/<MONGO_DB_NAME>/${MONGO_DB_NAME}/;s/<MONGO_USER>/${OPENSHIFT_MONGODB_DB_USERNAME}/;s/<MONGO_PASS>/${OPENSHIFT_MONGODB_DB_PASSWORD}/;s/<MAILER_USER>/${MAILER_USER}/;s/<MAILER_PASS>/${MAILER_PASS}/;s/<MAILER_MAIL>/${MAILER_MAIL}/;s/<MODERATOR_MAIL>/${MODERATOR_MAIL}/" > ${OPENSHIFT_DATA_DIR}/config.json

